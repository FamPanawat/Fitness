@{
    ViewData["Title"] = "Home Page";
    // ตรวจสอบว่าควรแสดงแจ้งเตือนหรือไม่
    bool showAlert = ViewBag.ShowAlert;
}

@if (showAlert)
{
    <script>
        // แสดงแจ้งเตือนเมื่อโหลดหน้า view ครั้งแรก
        Swal.fire({
        title: 'Welcome',
        text: 'You have logged in successfully!',
        icon: 'success',
        timer: 3000,
        timerProgressBar: true,
        toast: true,
        showConfirmButton: false,
        position: 'top-end'
      });
    </script>
}

<script>
    $(document).ready(function() {



  });
</script>

