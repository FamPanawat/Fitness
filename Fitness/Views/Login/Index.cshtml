@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.12/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {

            background-color: springgreen;
            background-image: url('../../Images/bg-ku.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;

        }

        .container {
            margin-top: 100px;
        }

        .card {
            border: none;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: none;
            text-align: center;
            padding-bottom: 0;
        }

        .card-body {
            padding-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .btn-login {
            background-color: #007bff;
            color: #fff;
        }

            .btn-login:hover {
                background-color: #0069d9;
                color: #fff;
            }

        .btn-forgot-password {
            color: #6c757d;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Login</h4>
                    </div>
                    <div class="card-body">
                        @*<form method="post" asp-action="index" asp-controller="Login">
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input type="text" class="form-control" id="username" name="username" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" id="password" name="password" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block btn-login">Login</button>
                        </form>*@

                        <form id="loginForm">
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input type="text" class="form-control" id="username" name="username" required />
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" class="form-control" id="password" name="password" required />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block btn-login">Login</button>
                        </form>

                        <div class="text-center mt-3">
                            <a asp-action="Index" asp-controller="Home" class="btn-forgot-password">
                                <i class="bi bi-camera"></i>ลงทะเบียนเข้าใช้ห้องฟิตเนส</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.12/dist/sweetalert2.all.min.js"></script>

    @*Java Script*@
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("loginForm");

            form.addEventListener("submit", function (event) {
                event.preventDefault(); // ไม่ให้หน้าเว็บโหลดใหม่เมื่อ Submit

                const username = document.getElementById("username").value;
                const password = document.getElementById("password").value;

                // ส่งข้อมูลผู้ใช้ไปยังเซิร์ฟเวอร์เพื่อตรวจสอบ
                fetch("/Login/VerifyUser", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ username, password })
                })
                    .then(response => response.json())
                    .then(data => {
                        // ตรวจสอบคำตอบจากเซิร์ฟเวอร์
                        if (data.success) {
                            // หากเข้าสู่ระบบสำเร็จ
                            window.location.href = "/Home/Index";
                        } else {
                            // หากเข้าสู่ระบบไม่สำเร็จ
                            console.log(data.error);
                            Swal.fire({
                            //position: 'top-end',
                            icon: 'error',
                            title: 'ชื่อผู้ใช้หรือรหัสผ่านไม่ถูกต้อง!',
                            showConfirmButton: true,
                            timer: 3000
})
                        }
                    })
                    .catch(error => {
                        console.error("Error:", error);
                    });
            });
        });





    </script>
</body>
</html>
